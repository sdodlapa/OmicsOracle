# Test Environment Configuration
# This file sets up a local testing environment using SQLite and in-memory cache

# Database - Using SQLite for local testing (no PostgreSQL required)
OMICS_DB_URL=sqlite+aiosqlite:///./test_omics_oracle.db
OMICS_DB_ECHO=True

# Redis - Disabled, using in-memory fallback
OMICS_REDIS_URL=redis://localhost:6379/0

# Rate Limiting - Enabled with in-memory fallback
OMICS_RATE_LIMIT_ENABLED=True
OMICS_RATE_LIMIT_FALLBACK_TO_MEMORY=True

# Auth - Test configuration
OMICS_AUTH_SECRET_KEY=test_secret_key_change_in_production_12345678901234567890
OMICS_AUTH_ACCESS_TOKEN_EXPIRE_MINUTES=30
OMICS_AUTH_PASSWORD_RESET_TOKEN_EXPIRE_HOURS=24

# Environment
OMICS_ENVIRONMENT=development

# API Settings
OMICS_API_HOST=127.0.0.1
OMICS_API_PORT=8000

# Logging
OMICS_LOG_LEVEL=INFO
